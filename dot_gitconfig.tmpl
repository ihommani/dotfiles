[alias]
	logline = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[diff]
        mnemonicPrefix = true
        wordRegex = .
[fetch]
        recurseSubmodules = on-demand
[grep]
        extendedRegexp = true
[log]
        abbrevCommit = true
[merge]
        conflictStyle = diff3
	tool = meld
[mergetool]
        keepBackup = false
        keepTemporaries = false
        prompt = false
[pull]
        rebase = true
[push]
        default = upstream
[status]
        submoduleSummary = true
[credential]
	helper = cache --timeout=3600
[help]
	autocorrect = 1
[rerere]
	enabled = true
[http]
	sslVerify = true
